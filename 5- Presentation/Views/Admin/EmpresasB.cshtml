
@{
    ViewData["Title"] = "Empresas";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";


    string bgcol1 = "";
    string bgcol2 = "";
    string bgcol3 = "";
    string bgcol4 = "";

    if(ViewBag.q == 1)
    {
        bgcol1 = "bg-warning";
    }
        else if(ViewBag.q == 2)
    {
        bgcol2 = "bg-warning";
    }
            else if(ViewBag.q == 3)
    {
        bgcol3 = "bg-warning";
    }
            else if(ViewBag.q == 4)
    {
        bgcol4 = "bg-warning";
    }
}

<p>Buscar</p>
<div class="">
    <form class="form-inline" asp-controller="Admin" asp-action="EmpresasB" asp-route-returnUrl="@Context.Request.QueryString">
        <input type="hidden" class="form-control" name="q" id="q" value="@ViewBag.q">
            <div class="col-md-12">Digite @ViewBag.columna: <input type="text" class="form-control" name="buscar" id="buscar" value="@ViewBag.sBuscar"> <button type="submit" class="btn btn-warning"><i class="fas fa-search"></i> Buscar </button></div>

    </form>
</div>
    <div class="container-fluid bg-light border border-light shadow p-4 mb-2 bg-white">
        <h1 class="title1">Busqueda de Empresas</h1>
        <p>empresas:</p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Orden</th>
                    <th>Empresa</th>
                    <th>RNC</th>
                    <th>Email</th>
                    <th>Pais</th>
                    <th>Ciudad</th>
                </tr>
            </thead>

            <tbody>
                @{int canapl = 0; }
                @foreach (var item in ViewBag.UserxList)
                {

                    canapl++;

                    <tr>
                        <td>@canapl</td>
                        <td class="@bgcol1">@item.EmpresaCentro</td>
                        <td class="@bgcol2">@item.RNC</td>
                        <td>@item.email</td>
                        <td class="@bgcol3">@item.Pais</td>
                        <td class="@bgcol4">@item.Ciudad</td>
                    </tr>


                }
            </tbody>
        </table>
        <br><br>
    </div>

<div class="divAlto"></div>


