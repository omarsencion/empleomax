@model EmpleosWebMax.Domain.Entity.LoginViewModel
@{
    ViewData["Title"] = "Login Home";
}

<h1>Login</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-controller="Procesos" asp-action="Login2" asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="custom-control custom-checkbox">
                    <input asp-for="RememberMe" type="checkbox" class="custom-control-input">
                    <label class="custom-control-label" asp-for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
                </div>
                <input type="hidden" name="Id" class="form-control" value="@ViewBag.id_abc" />
                <input type="hidden" name="Oportunidad" class="form-control" value="@ViewBag.id2_abc" />
                <input type="hidden" name="reft" class="form-control" value="1" />
                <input type="hidden" name="npage" class="form-control" value="@ViewBag.nPagina" />
            </div>
            <button type="submit" class="btn btn-primary">Login</button>

        </form>

    </div>
</div>