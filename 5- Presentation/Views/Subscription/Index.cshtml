@model IEnumerable<EmpleosWebMax.Domain.Dtos.PlanServiceSubscriptionDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

/*    body {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
}*/

    .card-pricing.popular {
        z-index: 1;
        border: 3px solid #007bff;
    }

    .card-pricing .list-unstyled li {
        padding: .5rem 0;
        color: #6c757d;
    }
</style>
<div class="container mb-5 mt-5">
    <div class="pricing card-deck flex-column flex-md-row mb-3">
        @foreach (var item in Model)
        {

            <div class="card card-pricing text-center px-3 mb-4">
                <span class="h6 w-60 mx-auto px-4 py-1 rounded-bottom bg-primary text-white shadow-sm">@item.PlanName</span>
                <div class="bg-transparent card-header pt-4 border-0">
                    <h1 class="h1 font-weight-normal text-primary text-center mb-0" data-pricing-value="15">$<span class="price">@item.PlanPrice</span><span class="h6 text-muted ml-2">/Mensual</span></h1>
                </div>
                <div class="card-body pt-0">
                    <ul class="list-unstyled mb-4">
                        @foreach (var service in item.ServicesPlan)
                        {
                            <li>@service.Name</li>
                        }
                    </ul>
                        <button type="button" class="btn btn-outline-secondary mb-3">Order now</button>
                    </div>
            </div>

        }
    </div>
</div>