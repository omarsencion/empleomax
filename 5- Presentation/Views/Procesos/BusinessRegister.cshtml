@model EmpleosWebMax.Domain.Entity.RegisterViewModel
@{
    ViewData["Title"] = "BusinessRegister";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    string sTIPOU = "";
    string sTIPOUmsg = "";

    sTIPOU = "Usuario para Empresa";
    sTIPOUmsg = "Es necesario registrar uno o más usuarios que permitan administrar los datos y las ofertas de empleo de su empresa, los usuarios podrán administrar la cuenta empresarial.";
}
<div class="container">
    <br><p class="title1"><i class="fas fa-user-tie"></i> @sTIPOU</p><br>

    <div class="row" onload="gfg_Run()">
        <div class="col-md-5 shadow-lg p-4 mb-4 bg-white">
            <form method="post" asp-controller="Procesos" asp-action="BusinessRegister" asp-route-returnUrl="@Context.Request.QueryString">
                <div class="form-group">
                    <input asp-for="FirstName" class="form-control" placeholder="Nombres" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="LastName" class="form-control" placeholder="Apellidos" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="form-check-inline">
                        <label class="form-check-label" for="radio1">
                            <input type="radio" asp-for="Sexo" id="Sexo" value="true">  Hombre
                        </label>
                    </div>
                    <div class="form-check-inline">
                        <label class="form-check-label" for="radio2">
                            <input type="radio" asp-for="Sexo" Id="Sexor" value="false">  Mujer
                        </label>
                    </div>
                    <span asp-validation-for="Sexo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder="Email@example.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                    @if (ViewBag.ns == 1)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <strong><i class="fas fa-exclamation-circle"></i></strong>@ViewBag.erroremail.
                        </div>
                        <script type="text/javascript">

                            $(document).ready(function () {

                                window.setTimeout(function () {
                                    $(".alert").fadeTo(1000, 0).slideUp(1000, function () {
                                        $(this).remove();
                                    });
                                }, 5000);

                            });
                        </script>
                    }
                </div>

                <div class="form-group">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                </div>
                <div class="form-group">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Repita el Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Registrar</button>

            </form>
            <p class="TextResCV">@sTIPOUmsg</p>

        </div>
    </div>
</div>

