                        </div>



                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.Email2)<br>
                            @Html.DisplayFor(model => model.Email2)
                        </div>

                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.RNC)<br>
