@model EmpleosWebMax.Domain.Dtos.ModuleSequenceDto
@using EmpleosWebMax.Common.Enum

@{
    ViewData["Title"] = "AddModuleSequence";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Add Module Sequence</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddModuleSequence">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sequence" class="control-label"></label>
                <input asp-for="Sequence" class="form-control" />
                <span asp-validation-for="Sequence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Module" class="control-label"></label>
                <select asp-for="Module" class="form-control" asp-items="Html.GetEnumSelectList<ModuleSequenceEnum>()"></select>
                <span asp-validation-for="Module" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModuleString" class="control-label"></label>
                <input asp-for="ModuleString" class="form-control" />
                <span asp-validation-for="ModuleString" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-danger">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
